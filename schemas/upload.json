{
  "id": "upload",
  "type": "object",
  "additionalProperties": false,
  "required": ["data"],
  "properties": {
    "data": {
      "additionalProperties": false,
      "type": "object",
      "required": ["attributes", "type"],
      "properties": {
        "type": {
          "type": "string",
          "constant": "upload"
        },
        "attributes": {
          "additionalProperties": false,
          "type": "object",
          "required": ["meta", "files"],
          "properties": {
            "meta": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name"],
              "properties": {
                "name": {
                  "$ref": "common#/definitions/name"
                },
                "description": {
                  "$ref": "common#/definitions/description"
                },
                "website": {
                  "$ref": "common#/definitions/website"
                },
                "tags": {
                  "allOf": [
                    {
                      "$ref": "common#/definitions/tags"
                    },
                    {
                      "type": "array",
                      "minItems": 1
                    }
                  ]
                },
                "export": {
                  "$ref": "common#/definitions/export"
                },
                "controlsData": {
                  "$ref": "common#/definitions/controlsData"
                },
                "type": {
                  "$ref": "common#/definitions/type"
                },
                "backgroundColor": {
                  "$ref": "common#/definitions/color"
                },
                "backgroundImage": {
                  "$ref": "common#/definitions/backgroundImage"
                }
              }
            },
            "access": {
              "type": "object",
              "required": ["setPublic"],
              "properties": {
                "setPublic": {
                  "type": "boolean"
                }
              }
            },
            "temp": {
              "type": "boolean",
              "default": false
            },
            "unlisted": {
              "type": "boolean",
              "default": false
            },
            "resumable": {
              "type": "boolean",
              "default": true
            },
            "uploadType": {
              "type": "string",
              "enum": [ "simple" ]
            },
            "files": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "contentType", "contentLength", "md5Hash"],
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "contentType": {
                    "type": "string"
                  },
                  "contentEncoding": {
                    "type": "string"
                  },
                  "md5Hash": {
                    "type": "string",
                    "pattern": "^[0-9A-Fa-f]{32}$"
                  },
                  "source-sha256": {
                    "type": "string",
                    "pattern": "^[0-9A-Fa-f]{64}$"
                  },
                  "contentLength": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 2000000000
                  },
                  "decompressedLength": {
                    "type": "integer",
                    "minimum": {
                      "$data": "1/contentLength"
                    },
                    "maximum": 2000000000
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
