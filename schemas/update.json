{
  "id": "update",
  "type": "object",
  "additionalProperties": false,
  "required": [ "data" ],
  "properties": {
    "data": {
      "additionalProperties": false,
      "type": "object",
      "required": ["id", "type", "attributes"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 36,
          "maxLength": 36
        },
        "type": {
          "type": "string",
          "constant": "file"
        },
        "attributes": {
          "additionalProperties": false,
          "type": "object",
          "required": [ "meta" ],
          "properties": {
            "meta": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 150
                },
                "description": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 2000
                },
                "website": {
                  "type": "string",
                  "format": "uri"
                },
                "tags": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
